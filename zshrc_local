## Java Stuff
export JAVA_HOME=$(/usr/libexec/java_home -v 1.8)

function java_use() {
    export JAVA_HOME=$(/usr/libexec/java_home -v $1)
    export PATH=$JAVA_HOME/bin:$PATH
    java -version
}

