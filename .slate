#
# Slate configuration
# https://github.com/jigish/slate
#

# Settings:
config defaultToCurrentScreen true

# Monitors:
alias mon-macbook	1440x900
alias mon-dell		1920x1080

# Layouts:
default 1monitor	resolutions:${mon-macbook}
default 2monitor	resolutions:${mon-macbook};${mon-dell}

# Aliases for shorter move commands:
alias	x	screenOriginX
alias	y	screenOriginY
alias	w	screenSizeX
alias	h	screenSizeY



# Positions
alias	full	move	${x};${y}			${w};${h}
alias	left	move	${x};${y}			${w}/2;${h}
alias	right	move	${x}+${w}/2;${y}	${w}/2;${h}
alias	top		move	${x};${y}			${w};${h}/2
alias	bottom	move	${x};${y}+${h}/2	${w};${h}/2


# Bind to Keys:
bind m:alt;cmd		${full}
bind left:alt;cmd 	${left}
bind right:alt;cmd 	${right}
bind up:alt;cmd 	${top}
bind down:alt;cmd 	${bottom}